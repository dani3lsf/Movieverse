<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.entities.Theater" table="Theater" lazy="false">
		<id name="id" column="Id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="name" column="Name" type="string" length="255" not-null="true" lazy="false"/>
		<property name="city" column="City" type="string" length="255" not-null="true" lazy="false"/>
		<property name="site" column="Site" type="string" length="255" not-null="true" lazy="false"/>
		<many-to-one name="country" cascade="lock" column="CountryId" class="data.entities.Country" not-null="true" lazy="proxy">
		</many-to-one>
		<set name="showtime" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="TheaterId" not-null="true"/>
			<one-to-many class="data.entities.Showtime"/>
		</set>
	</class>
</hibernate-mapping>
