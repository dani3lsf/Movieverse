<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.entities.Genre" table="Genre" lazy="false">
		<id name="id" column="Id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="name" column="Name" type="string" length="255" not-null="true" lazy="false"/>
		<set name="movies" table="MovieGenre" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="GenreId" not-null="true"/>
			<many-to-many column="MovieId" class="data.entities.Movie">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
