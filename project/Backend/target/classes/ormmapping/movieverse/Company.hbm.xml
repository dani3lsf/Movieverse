<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.movieverse.Company" table="Company" lazy="false">
		<id name="id" column="Id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="company_country" cascade="lock" column="CountryId" class="data.movieverse.Country" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="homepage" column="Homepage" type="string" length="255" not-null="false" lazy="false"/>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="image" column="Image" type="string" length="255" not-null="false" lazy="false"/>
		<property name="headquarters" column="Headquarters" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Movies" table="Movie_Company" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="CompanyId" not-null="true"/>
			<many-to-many column="MovieId" class="data.movieverse.Movie">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
