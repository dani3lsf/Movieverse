<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/movieverse</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">postgres</property>
		<property name="hibernate.connection.provider_class">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/data/movieverse/Achievement.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Badge.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Comment.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Company.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Country.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Feed.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Friendship.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Genre.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/MUser.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Media.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Member.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Movie.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/MovieMember.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Showtime.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/Theater.hbm.xml" />
		<mapping resource="ormmapping/data/movieverse/UserMovie.hbm.xml" />
	</session-factory>
</hibernate-configuration>
