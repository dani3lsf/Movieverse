<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.movieverse.MUser" table="MUser" lazy="false">
		<id name="id" column="Id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="favouriteGenre" cascade="lock" column="GenreId" class="data.movieverse.Genre" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<many-to-one name="userCountry" cascade="lock" column="CountryId" class="data.movieverse.Country" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="username" column="Username" unique="true" type="string" length="255" not-null="true" lazy="false"/>
		<property name="password" column="Password" type="string" length="255" not-null="true" lazy="false"/>
		<property name="email" column="Email" unique="true" type="string" length="255" not-null="true" lazy="false"/>
		<property name="name" column="Name" type="string" length="255" not-null="true" lazy="false"/>
		<property name="birthDate" column="BirthDate" type="date" not-null="true" lazy="false"/>
		<property name="gender" column="Gender" type="character" length="1" not-null="false" lazy="false"/>
		<property name="movieCount" column="MovieCount" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="hoursCount" column="HoursCount" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="avatar" column="Avatar" type="string" length="255" not-null="false" lazy="false"/>
		<property name="joinDate" column="JoinDate" type="date" not-null="true" lazy="false"/>
		<property name="token" column="Token" unique="true" type="string" length="255" not-null="false" lazy="false"/>
		<property name="tokenLimit" column="TokenLimit" type="timestamp" not-null="false" lazy="false"/>
		<property name="commentsCount" column="CommentsCount" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="ratingsCount" column="RatingsCount" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="friendsCount" column="FriendsCount" type="integer" length="10" not-null="true" lazy="false"/>
		<set name="ORM_ReceivedFriendships" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="MUserId" not-null="true"/>
			<one-to-many class="data.movieverse.Friendship"/>
		</set>
		<set name="ORM_Comments" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="MUserId" not-null="true"/>
			<one-to-many class="data.movieverse.Comment"/>
		</set>
		<set name="ORM_Feed" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="MUserId" not-null="true"/>
			<one-to-many class="data.movieverse.Feed"/>
		</set>
		<set name="ORM_Achievements" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="MUserId" not-null="true"/>
			<one-to-many class="data.movieverse.Achievement"/>
		</set>
		<set name="ORM_UserMovies" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="MUserId" not-null="true"/>
			<one-to-many class="data.movieverse.UserMovie"/>
		</set>
		<set name="ORM_RequestedFriendships" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="MUserId2" not-null="true"/>
			<one-to-many class="data.movieverse.Friendship"/>
		</set>
		<set name="ORM_Friends" table="MUser_Friendship" lazy="true" cascade="save-update,lock">
			<key column="MUserId" not-null="true"/>
			<many-to-many column="FriendshipId" class="data.movieverse.Friendship">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
