<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.entities.Badge" table="Badge" lazy="false">
		<id name="id" column="Id" type="integer" unsaved-value="0">
			<generator class="identity">
			</generator>
		</id>
		<property name="name" column="Name" unique="true" type="string" length="255" not-null="true" lazy="false"/>
		<property name="image" column="Image" type="string" length="255" not-null="true" lazy="false"/>
		<set name="achievements" lazy="false" cascade="save-update,lock" inverse="true">
			<key column="BadgeId" not-null="true"/>
			<one-to-many class="data.entities.Achievement"/>
		</set>
	</class>
</hibernate-mapping>
